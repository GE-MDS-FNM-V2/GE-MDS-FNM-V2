{
  "name": "ge-mds-fnm-v2",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently --raw 'yarn start:frontend'  'yarn start:backend'",
    "start:frontend": "yarn workspace frontend start",
    "start:backend": "yarn workspace backend start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "concurrently": "^5.0.0"
  }
}
